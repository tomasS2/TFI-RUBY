<section class="gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-3 p-md-4">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-4">Asignar nueva contraseña a <%= @user.username %></h3>

            <%= form_for(@user, url: activate_app_user_path(@user), method: :get) do |f| %>
              <% if @user.errors.any? %>
                <div style="color: red">
                  <ul>
                    <% @user.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-group">
                <%= f.label :password, "Nueva Contraseña" %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <div class="mt-3 pt-2 d-flex justify-content-between">
                <%= link_to "Volver a usuarios", app_users_path, class: "btn btn-danger btn-md w-20" %>
                <%= f.submit "Activar Usuario", class: 'btn btn-primary' %>
              </div>
              
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>