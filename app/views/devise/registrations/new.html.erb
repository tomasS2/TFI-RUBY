<section class="gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-3 p-md-4">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-4">Registrar Usuario</h3>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: {turbo: false} }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-outline mb-3">
                <%= f.label :email, "Correo electrónico", class: "form-label" %>
                <%= f.email_field :email, class: "form-control form-control-sm", autofocus: true, autocomplete: "email" %>
              </div>

              <div class="form-outline mb-3">
                <%= f.label :username, "Nombre de usuario", class: "form-label" %>
                <%= f.text_field :username, class: "form-control form-control-sm", autofocus: true, autocomplete: "username" %>
              </div>

              <div class="form-outline mb-3">
                <%= f.label :phone_number, "Teléfono", class: "form-label" %>
                <%= f.text_field :phone_number, class: "form-control form-control-sm", autofocus: true, autocomplete: "phone_number" %>
              </div>

              <div class="form-outline mb-3">
                <%= f.label :role, "Rol", class: "form-label" %><br />
                <% roles = current_user.has_role?(:admin) ? ['admin', 'manager', 'employee'] : ['manager', 'employee'] %>
                <% roles.each do |role| %>
                  <div class="form-check">
                    <%= check_box_tag 'user[role][]', role, false, class: 'form-check-input', id: "#{role}Role" %>
                    <%= label_tag "#{role}Role", role.capitalize, class: 'form-check-label' %>
                  </div>
                <% end %>
              </div>

              <div class="form-outline mb-3">
                <%= f.label :password, "Contraseña", class: "form-label" %>
                <% if @minimum_password_length %>
                  <em>(Al menos <%= @minimum_password_length %> caracteres)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
              </div>

              <div class="mt-4 pt-2">
                <%= f.submit "Enviar", class:"btn btn-primary btn-md" %>
              </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
