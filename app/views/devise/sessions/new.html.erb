<section class="gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-3 p-md-4">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-4">Iniciar sesi칩n</h3>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: {turbo: false} }) do |f| %>
              <% if flash[:alert] %>
                <div class="alert alert-danger">
                  <%= flash[:alert] %>
                </div>
              <% end %>

              <div class="form-outline mb-3">
                <%= f.label :email, "Correo electr칩nico", class: "form-label" %><br />
                <%= f.email_field :email, class: "form-control form-control-sm", autofocus: true, autocomplete: "email" %>
              </div>

              <div class="form-outline mb-3">
                <%= f.label :password, "Contrase침a", class: "form-label" %><br />
                <%= f.password_field :password, class: "form-control form-control-sm", autocomplete: "current-password" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me, class: 'form-check-input' %>
                  <%= f.label :remember_me, "Recordarme", class: 'form-check-label' %>
                </div>
              <% end %>

              <div class="mt-3 pt-2">
                <%= f.submit "Iniciar sesi칩n", class: "btn btn-primary btn-sm w-100" %>
              </div>

            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
