<% content_for :title, "Nuevo talle" %>

<section class="gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-3 p-md-4">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-4">Crear talle</h3>
              <%= form_for(@size, url: sizes_path, method: :post) do |form| %>
                <% if @size.errors.any? %>
                  <div style="color: red">
                    <ul>
                      <% @size.errors.each do |error| %>
                        <li><%= error.full_message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="form-outline mb-3">
                  <%= form.label :size_value, "Valor del talle", class: "form-label" %>
                  <%= form.text_field :size_value, class: "form-control form-control-sm" %>
                </div>
                <div class="mt-3 pt-2 d-flex justify-content-between">
                  <%= link_to "Volver a los talles", sizes_path, class: "btn btn-danger btn-sm w-20" %>
                  <%= form.submit "Guardar", class: "btn btn-primary btn-sm w-20" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
